{
    "extends": "@eggjs/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "allowJs": false,
        "pretty": true,
        "noEmitOnError": false,
        "noUnusedLocals": false,
        "paths": {
            "@util/*": ["app/util/*"],
            "@service/*": ["app/service/*"],
            "@model/*": ["app/model/*"],
            "@public/*": ["app/public/*"],
            "@controller/*": ["app/controller/*"],
            "@interface/*": ["app/interface/*"],
            "@middleware/*": ["app/middleware/*"]
        },
        "baseUrl": "."
    },
    "exclude": ["node_modules", "docker", "logs", "run", "app/public"]
}
